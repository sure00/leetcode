class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int mi=nums[0];
        int ma=nums[0];
        int res=nums[0];
        
        for(int i=1;i<nums.size();i++){
            int tmp=ma;
            ma=max(max(ma*nums[i], mi*nums[i]) , nums[i]);
            mi=min(min(mi*nums[i], tmp*nums[i]), nums[i]);
            
            if(ma > res)
                res=ma;
        }
        
        return res;
    }
};
