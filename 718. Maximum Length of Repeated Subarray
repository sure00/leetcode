class Solution {
public:
    int findLength(vector<int>& A, vector<int>& B) {
        int m = A.size();
        int n= B.size();
        int ret=0;
        
        vector<vector<int>> dp(m+1, vector<int>(n+1,0));
        
        for(int i=0;i<=m;i++){
            for(int j=0;j<=n;j++){
                if(i!=0 && j!=0){
                    if(A[i-1]==B[j-1]){
                        dp[i][j]=dp[i-1][j-1]+1;
                        ret = max(ret, dp[i][j]);
                    }
                }
                else
                    dp[i][j]=0;
            }            
        }
        return ret;
    }
};
